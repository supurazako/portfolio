---
import "../styles/global.css";
import type { WorksContent } from "../i18n/ui";

const { works } = Astro.props as { works: WorksContent };
---

<section>
    <h1>{works.heading}</h1>
    {works.sections.map((section) => (
        <div class="mt-6">
            <h2>{section.title}</h2>
            {section.items.map((item) => (
                <article class="mt-4 space-y-2">
                    <h3>{item.name}</h3>
                    {item.image && (
                        <img
                            src={item.image.src}
                            alt={item.image.alt}
                            width={item.image.width}
                            height={item.image.height}
                        />
                    )}
                    {item.links?.map((link) => (
                        <p>
                            {link.label}:{" "}
                            <a href={link.href} target="_blank" rel="noopener noreferrer">
                                {link.text}
                            </a>
                        </p>
                    ))}
                    <p>{item.description}</p>
                    {item.details && <p>{item.details}</p>}
                    {item.tech && <p>{item.tech}</p>}
                </article>
            ))}
        </div>
    ))}
</section>
