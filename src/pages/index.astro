---
import "../styles/global.css";

// import Welcome from '../components/Welcome.astro';
// import Layout from '../layouts/Layout.astro';
import DefaultHead from "../components/DefaultHead.astro";
import Navigation from '../components/Navigation.astro';
import WorksComponent from '../components/WorksComponent.astro';

const techCategories = [
    { title: "Core Languages", items: ["Java", "TypeScript", "JavaScript", "Go", "PHP"] },
    { title: "Web Frameworks", items: ["React", "Spring Framework", "Laravel", "Node.js"] },
    { title: "DevOps & Platforms", items: ["AWS", "Docker", "PostgreSQL", "Git", "GitHub Workflow"] },
];
---

<html lang="ja">
	<head>
        <DefaultHead title="Portfolio" />
	</head>
	<body>
        <Navigation />
        <div class="md:flex items-start flex-row-reverse container pt-3">
            <img class="p-4 " src={`${import.meta.env.BASE_URL}tomatokun.png`} alt="icon" />
            <div class="flex-1 text-left bg-blue-100 p-4">
                <p class="text-red-500">Name: Miyamoto Naoyuki</p>
                <p>Location: Japan, Sapporo</p>
                <p>Affilication: Department of System Infomation, Hokkaido Information University</p>
                <section class="mt-4" aria-labelledby="tech-stack">
                    <h2 id="tech-stack" class="font-semibold text-lg">Tech Stack</h2>
                    <div class="mt-3 grid gap-3 md:grid-cols-3">
                        {techCategories.map((category) => (
                            <div class="rounded border border-blue-200 bg-white p-3 shadow-sm">
                                <h3 class="text-sm font-semibold text-blue-700">{category.title}</h3>
                                <ul class="mt-2 list-disc list-inside space-y-1 text-sm">
                                    {category.items.map((item) => (
                                        <li>{item}</li>
                                    ))}
                                </ul>
                            </div>
                        ))}
                    </div>
                </section>
                <ul>Accounts:
                    <li>X: <a href="https://x.com/Msprzk">Msprzk</a></li>
                    <li>Github: <a href="https://github.com/supurazako">supurazako</a></li>
                </ul>
                <h2>Interests</h2>
                <ul>
                    <li>Web開発</li>
                    <li>ネットワーク</li>
                    <li>リアルタイム通信</li>
                    <li>セキュリティ</li>
                    <li>ソフトウェア開発</li>
                </ul>
                <WorksComponent />
                <h2>contact: mnaoyuki0228 at gmail.com</h2>
            </div>
        </div>
	</body>
</html>
