---
import "../styles/global.css";

// import Welcome from '../components/Welcome.astro';
// import Layout from '../layouts/Layout.astro';
import DefaultHead from "../components/DefaultHead.astro";
import Navigation from '../components/Navigation.astro';
import WorksComponent from '../components/WorksComponent.astro';
import { content, defaultLanguage } from "../i18n/content";

const pageContent = content[defaultLanguage];
const techCategories = pageContent.index.techCategories;
---

<html lang={defaultLanguage}>
	<head>
        <DefaultHead title={pageContent.meta.title} description={pageContent.meta.description} />
	</head>
	<body>
        <Navigation />
        <div class="md:flex items-start flex-row-reverse container pt-3">
            <img class="p-4 " src={`${import.meta.env.BASE_URL}tomatokun.png`} alt="icon" />
            <div class="flex-1 text-left bg-blue-100 p-4 space-y-3" data-i18n-index>
                <p data-index-key="name">{pageContent.index.name}</p>
                <p data-index-key="location">{pageContent.index.location}</p>
                <p data-index-key="affiliation">{pageContent.index.affiliation}</p>
                <section class="mt-4 space-y-2" aria-labelledby="tech-stack">
                    <h2 id="tech-stack" class="font-semibold text-lg" data-index-key="techStackTitle">{pageContent.index.techStackTitle}</h2>
                    <div class="mt-3 grid gap-3 md:grid-cols-3" data-i18n-tech-stack>
                        {techCategories.map((category) => (
                            <div class="rounded border border-blue-200 bg-white p-3 shadow-sm">
                                <h3 class="text-sm font-semibold text-blue-700">{category.title}</h3>
                                <ul class="mt-2 list-disc list-inside space-y-1 text-sm">
                                    {category.items.map((item) => (
                                        <li>{item}</li>
                                    ))}
                                </ul>
                            </div>
                        ))}
                    </div>
                </section>
                <section class="space-y-2">
                    <h2 class="font-semibold" data-index-key="accountsTitle">{pageContent.index.accountsTitle}</h2>
                    <ul class="list-disc list-inside space-y-1" data-i18n-accounts>
                        {pageContent.index.accounts.map((account) => (
                            <li>
                                {account.label}: <a href={account.href} target="_blank" rel="noopener noreferrer">{account.value}</a>
                            </li>
                        ))}
                    </ul>
                </section>
                <section class="space-y-2">
                    <h2 class="font-semibold" data-index-key="interestsTitle">{pageContent.index.interestsTitle}</h2>
                    <ul class="list-disc list-inside space-y-1" data-i18n-interests>
                        {pageContent.index.interests.map((interest) => (
                            <li>{interest}</li>
                        ))}
                    </ul>
                </section>
                <WorksComponent />
                <h2 data-index-key="contact">{pageContent.index.contact}</h2>
            </div>
        </div>
	</body>
</html>
