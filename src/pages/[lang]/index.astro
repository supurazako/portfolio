---
import "../../styles/global.css";
import DefaultHead from "../../components/DefaultHead.astro";
import Navigation from "../../components/Navigation.astro";
import WorksComponent from "../../components/WorksComponent.astro";
import type { Language } from "../../i18n/ui";
import { getLangFromUrl, getLanguageStaticPaths, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url) as Language;
const t = useTranslations(lang);
const indexContent = t("index");
const worksContent = t("works");
const metaContent = t("meta");
const techCategories = indexContent.techCategories;

export function getStaticPaths() {
    return getLanguageStaticPaths();
}
---

<html lang={lang}>
    <head>
        <DefaultHead title={metaContent.title} description={metaContent.description} />
    </head>
    <body>
        <Navigation lang={lang} />
        <div class="md:flex items-start flex-row-reverse container pt-3">
            <img class="p-4" src={`${import.meta.env.BASE_URL}tomatokun.png`} alt="icon" />
            <div class="flex-1 text-left bg-blue-100 p-4 space-y-3">
                <p>{indexContent.name}</p>
                <p>{indexContent.location}</p>
                <p>{indexContent.affiliation}</p>
                <section class="mt-4 space-y-2" aria-labelledby="tech-stack">
                    <h2 id="tech-stack" class="font-semibold text-lg">{indexContent.techStackTitle}</h2>
                    <div class="mt-3 grid gap-3 md:grid-cols-3">
                        {techCategories.map((category) => (
                            <div class="rounded border border-blue-200 bg-white p-3 shadow-sm">
                                <h3 class="text-sm font-semibold text-blue-700">{category.title}</h3>
                                <ul class="mt-2 list-disc list-inside space-y-1 text-sm">
                                    {category.items.map((item) => (
                                        <li>{item}</li>
                                    ))}
                                </ul>
                            </div>
                        ))}
                    </div>
                </section>
                <section class="space-y-2">
                    <h2 class="font-semibold">{indexContent.accountsTitle}</h2>
                    <ul class="list-disc list-inside space-y-1">
                        {indexContent.accounts.map((account) => (
                            <li>
                                {account.label}:{" "}
                                <a href={account.href} target="_blank" rel="noopener noreferrer">
                                    {account.value}
                                </a>
                            </li>
                        ))}
                    </ul>
                </section>
                <section class="space-y-2">
                    <h2 class="font-semibold">{indexContent.interestsTitle}</h2>
                    <ul class="list-disc list-inside space-y-1">
                        {indexContent.interests.map((interest) => (
                            <li>{interest}</li>
                        ))}
                    </ul>
                </section>
                <WorksComponent works={worksContent} />
                <h2>{indexContent.contact}</h2>
            </div>
        </div>
    </body>
</html>
